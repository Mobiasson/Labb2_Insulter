<Window x:Class="Insulter.Dialog.UserPromptDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Enter your name" Height="150" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <TextBlock Text="Please enter your name:" Margin="0, 0, 0, 3" />
            <TextBox x:Name="NameTextBox" Width="300" HorizontalAlignment="Left" BorderBrush="MediumPurple" BorderThickness="1" Padding="3" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Cancel" Width="auto" Click="Cancel_Click" Margin="5" IsCancel="True" />
            <Button Content="OK" Width="auto" Click="Ok_Click" Margin="5" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>